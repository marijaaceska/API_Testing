@model IEnumerable<object>

@{
    ViewData["Title"] = "API Logs Dashboard";
    var logs = Model.Cast<Dictionary<string, object>>().ToList();

    var successLogs = logs.Where(l => (l.ContainsKey("status") && l["status"] != null && l["status"].ToString().StartsWith("2")) && string.IsNullOrEmpty(l.ContainsKey("error") ? l["error"]?.ToString() : null)).ToList();
    var errorLogs = logs.Where(l => l.ContainsKey("error") && !string.IsNullOrEmpty(l["error"]?.ToString())).ToList();
    var warningLogs = logs.Where(l => l.ContainsKey("status") && l["status"] != null && (l["status"].ToString().StartsWith("4") || l["status"].ToString().StartsWith("5")) && (l["error"] == null || string.IsNullOrEmpty(l["error"].ToString()))).ToList();
}

@section Styles {
    <link rel="stylesheet" href="~/css/logStyle.css" />
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-4">
    <nav class="navbar navbar-expand-lg navbar-custom mb-4">
        <div class="container-fluid">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="/Home/Index">Home</a></li>
                <li class="nav-item"><a class="nav-link active" href="/Log/Index">Logs</a></li>
                <li class="nav-item"><a class="nav-link" href="/Home/Guide">Guide</a></li>
            </ul>
        </div>
    </nav>

    <h1 class="text-center mb-4" style="color: white;">API Logs Dashboard</h1>

    <form method="post" asp-controller="Email" asp-action="SendLogsReport">
        <div class="mt-4 text-center">
            <button type="submit" class="btn btn-warning btn-lg">📧 Send Selected Logs via Email</button>
        </div>

        <!-- ✅ Success Logs -->
        <h2 class="section-title">✅ Successful APIs (@successLogs.Count)</h2>
        <div class="dashboard-grid">
            @foreach (var log in successLogs)
            {
                var apiName = log.GetValueOrDefault("api_name")?.ToString() ?? "Unknown API";
                var timestamp = log.GetValueOrDefault("timestamp")?.ToString();
                var responseTime = log.GetValueOrDefault("response_time")?.ToString();
                var status = log.GetValueOrDefault("status")?.ToString();
                var id = log.GetValueOrDefault("_id")?.ToString();

                <div class="tile tile-success">
                    <input type="checkbox" name="selectedLogs" value="@id" />
                    <h4>@apiName</h4>
                    <p>@(timestamp ?? "-")</p>
                    <span class="badge bg-success text-dark">Status: @(status ?? "-")</span>
                    @if (!string.IsNullOrEmpty(responseTime))
                    {
                        <span class="badge bg-primary">⚡ @responseTime ms</span>
                    }
                </div>
            }
        </div>

        <!-- 💥 Error Logs -->
        <h2 class="section-title mt-5">💥 Error APIs (@errorLogs.Count)</h2>
        <div class="dashboard-grid">
            @foreach (var log in errorLogs)
            {
                var apiName = log.GetValueOrDefault("api_name")?.ToString() ?? "Unknown API";
                var error = log.GetValueOrDefault("error")?.ToString();
                var timestamp = log.GetValueOrDefault("timestamp")?.ToString();
                var id = log.GetValueOrDefault("_id")?.ToString();

                <div class="tile tile-error">
                    <input type="checkbox" name="selectedLogs" value="@id" />
                    <h4>@apiName</h4>
                    <p>@(timestamp ?? "-")</p>
                    <p class="text-danger">@error</p>
                </div>
            }
        </div>

        <!-- ⚠️ Warning Logs -->
        <h2 class="section-title mt-5">⚠️ Server / Client Errors (@warningLogs.Count)</h2>
        <div class="dashboard-grid">
            @foreach (var log in warningLogs)
            {
                var apiName = log.GetValueOrDefault("api_name")?.ToString() ?? "Unknown API";
                var status = log.GetValueOrDefault("status")?.ToString();
                var timestamp = log.GetValueOrDefault("timestamp")?.ToString();
                var responseTime = log.GetValueOrDefault("response_time")?.ToString();
                var id = log.GetValueOrDefault("_id")?.ToString();

                <div class="tile tile-warning">
                    <input type="checkbox" name="selectedLogs" value="@id" />
                    <h4>@apiName</h4>
                    <p>@(timestamp ?? "-")</p>
                    <span class="badge bg-warning text-dark">Status: @(status ?? "-")</span>
                    @if (!string.IsNullOrEmpty(responseTime))
                    {
                        <span class="badge bg-primary">⚡ @responseTime ms</span>
                    }
                </div>
            }
        </div>
    </form>
</div>

<script>
    document.querySelectorAll('.tile').forEach(tile => {
        const checkbox = tile.querySelector('input[type="checkbox"]');
        tile.addEventListener('click', function (e) {
            if (e.target.tagName !== 'INPUT') {
                checkbox.checked = !checkbox.checked;
            }
            tile.classList.toggle('selected', checkbox.checked);
        });
    });
</script>
