@{
    ViewData["Title"] = "Welcome";
    Layout = "_Layout";
}

@section Styles {
        <link rel="stylesheet" href="~/css/homeStyle.css" />
}

<nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="/Home/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Log/Index">Logs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Guide">Guide</a>
                </li>
            </ul>
        </div>
    </div>
</nav>


<div class="floating-shape shape1"></div>
<div class="floating-shape shape2"></div>
<div class="floating-shape shape3"></div>



<div class="welcome-container text-center">

    <h1 class="welcome-title">🚀 Welcome to API Test Monitoring</h1>
    <p class="welcome-lead">
        Keep track of all your API requests in real-time, detect errors instantly, and generate professional reports effortlessly.
    </p>

    <div class="mt-5">
        <a href="/Log" class="btn btn-primary btn-lg btn-custom me-3">📊 View Logs</a>
        <a href="/Log/DownloadPdf" class="btn btn-success btn-lg btn-custom me-3">📄 Download Report</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
            <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
            <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
    }

    <div class="card-container mt-5">
        <div class="feature-card">
            <i class="bi bi-speedometer2"></i>
            <h5>Real-Time Monitoring</h5>
            <p>Visualize API performance live and stay informed about system health.</p>
        </div>
        <div class="feature-card">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <h5>Error Detection</h5>
            <p>Automatically identify client and server errors for faster debugging.</p>
        </div>
        <div class="feature-card">
            <i class="bi bi-file-earmark-text-fill"></i>
            <h5>Reports & PDFs</h5>
            <p>Generate structured and professional reports in PDF format for stakeholders.</p>
        </div>
        <div class="feature-card">
            <i class="bi bi-bar-chart-fill"></i>
            <h5>Analytics</h5>
            <p>Track trends and metrics over time to optimize API reliability and performance.</p>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
